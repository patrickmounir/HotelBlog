<h1>Listing Hotels</h1>
<br>
<table>
  <tr>
    <th>Name</th>
    <th colspan="3"></th>
    <th>location</th>
    <th colspan="3"></th>
  </tr>

  <% @hotels.each do |hotel| %>
    <tr>
      <td><%= hotel.name%></td>
      <td colspan="3"></td>
      <td><%= hotel.location %></td>
      <td colspan="3"></td>
      <td><%= link_to 'Show', hotel_path(hotel) %></td>
    </tr>
  <% end %>
</table>
